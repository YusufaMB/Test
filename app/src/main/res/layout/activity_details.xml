<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Details_Activity"
    android:layout_margin="10dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/suyapic"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:layout_weight="2"
            android:src="@drawable/mypic1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="356dp"
            android:layout_weight="3"
            android:padding="8dp"

            >

            <TextView
                android:id="@+id/name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="NAME: "
                android:textSize="25dp"
                />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="17dp"
                android:text="PRICE"
                android:textSize="25dp"
                />

            <TextView
                android:id="@+id/item1"
                android:layout_width="189dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="50dp"
                android:text="NAME: "
                android:textSize="25dp" />

            <TextView
                android:id="@+id/price1"
                android:layout_width="159dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/item1"
                android:text="PRICE"
                android:textSize="25dp"
                android:layout_toRightOf="@id/item1"/>

            <TextView
                android:id="@+id/item2"
                android:layout_width="189dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="85dp"
                android:text="NAME: "
                android:textSize="25dp" />

            <TextView
                android:id="@+id/price2"
                android:layout_width="159dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/item2"
                android:text="PRICE"
                android:textSize="25dp"
                android:layout_toRightOf="@id/item1"/>

            <TextView
                android:id="@+id/item3"
                android:layout_width="189dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="120dp"
                android:text="NAME: "
                android:textSize="25dp" />

            <TextView
                android:id="@+id/price3"
                android:layout_width="159dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item2"
                android:text="PRICE"
                android:textSize="25dp"
                android:layout_toRightOf="@id/item3"
                />

        </RelativeLayout>
    </LinearLayout>




</ScrollView>